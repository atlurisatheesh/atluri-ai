# Backend runtime
QA_MODE=false

# LLM provider keys (at least one is required for AI responses)
OPENAI_API_KEY=
MODEL_NAME=gpt-4.1-mini
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# CORS: comma-separated list of allowed frontend origins
CORS_ALLOW_ORIGINS=http://localhost:3001,http://127.0.0.1:3001

# Supabase auth verification
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=
SUPABASE_JWT_SECRET=

# Development-only fallback (default false): allow unverified JWT claims
ALLOW_UNVERIFIED_JWT_DEV=false

# Basic HTTP rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_MAX_REQUESTS=300

# Distributed room state (optional)
USE_REDIS_ROOM_STATE=false
REDIS_URL=redis://localhost:6379/0

# Cross-instance websocket fanout (optional)
ROOM_EVENT_BUS_ENABLED=false
INSTANCE_ID=
